<h1>Корзина</h1>

<div id="card">
{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>  

        {{#each courses}}
        <tbody>
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                </td>
            </tr>
        </tbody> 
        {{/each}}
    </table>

    <p><strong>Цена: </strong><span class="price">{{price}}</span></p>
{{else}}
    <p>Корзина пуста</p>
{{/if}}
</div>